<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "Gigphil",
  "short_name": "Gigphil",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "favicon/sw/icon-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "gray",
  "background_color": "gray",
  "display": "minimal-ui",
  "orientation": "portrait",
  "description": "Gigphilはライブハウス、インディーロックが好きな人達の為のWebプラットフォームです。ライブ検索や、タイムテーブルシミュレーティング等が出来ます。"
}
